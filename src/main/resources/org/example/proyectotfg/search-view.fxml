<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<VBox fx:id="mainContainer" alignment="TOP_CENTER" prefHeight="700.0" prefWidth="410.0" spacing="10" styleClass="main-vbox" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectotfg.controllers.ControllerSearch">
    <children>
        <!-- Detalle de la búsqueda -->
        <Label fx:id="detalleBusqueda" styleClass="search-detail-label" text="Detalle de la búsqueda: [usuario_busqueda]" />
    </children>
   <AnchorPane fx:id="listaResultados" prefHeight="595.0" prefWidth="370.0">
      <children>
         <ScrollBar layoutX="363.0" orientation="VERTICAL" prefHeight="595.0" prefWidth="14.0" />
      </children></AnchorPane>
    <Button fx:id="botonCerrar" cancelButton="true" mnemonicParsing="false" onAction="#volverIncio" styleClass="buttonIntro" stylesheets="@styles.css" text="Cerrar">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@img/icons_home.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <!-- Estilos de la vista -->
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
