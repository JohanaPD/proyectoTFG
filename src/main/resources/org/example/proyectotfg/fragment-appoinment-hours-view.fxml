<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" styleClass="layoutFondoTotal" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectotfg.controllers.ControllerFragmentApoinmentHours">
    <children>
        <!-- HBox for two squares -->
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0" style="-fx-border-color: black; -fx-border-width: 0.5;" styleClass="hourBox" stylesheets="@styles.css">
                    <children>
                        <Text fx:id="hourText" text="00">
                     <font>
                        <Font size="36.0" />
                     </font></Text>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="29.0" style="-fx-border-color: black; -fx-border-width: 0.5;" styleClass="hourBox" stylesheets="@styles.css">
                    <children>
                        <Text fx:id="minuteText" text=":">
                     <font>
                        <Font size="36.0" />
                     </font></Text>
                    </children>
                </VBox>
            <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="100.0" style="-fx-border-color: black; -fx-border-width: 0.5;" styleClass="hourBox" stylesheets="@styles.css">
               <children>
                  <Text fx:id="hourText1" text="00">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
        </HBox>
        <!-- Button at the bottom -->
        <Button onAction="#confirmar" prefHeight="42.0" prefWidth="270.0" styleClass="botonCalendar" stylesheets="@styles.css" text="Seleccionar">
         <font>
            <Font size="46.0" />
         </font></Button>
    </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
