<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="410.0" spacing="10" styleClass="main-vbox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectotfg.controllers.ControllerPost">
    <children>
        <!-- Detalle de la búsqueda -->
        <Label fx:id="detalleBusqueda" styleClass="search-detail-label" text="Detalle de la búsqueda: [usuario_busqueda]" />

        <!-- Contenedor de resultados -->
        <VBox fx:id="contenedorResultados" styleClass="results-container" VBox.vgrow="ALWAYS">
            <children>
                <Label styleClass="results-label" text="Resultados:" />
                <ScrollPane fx:id="resultSearch" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="listaResultados">
                            <!-- Aquí se añadirán los resultados de los hilos de búsqueda -->
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
   <ScrollPane fx:id="mainContainer" prefHeight="574.0" prefWidth="370.0" />
    <Button fx:id="botonCerrar" cancelButton="true" mnemonicParsing="false" onAction="#volverIncio" styleClass="buttonIntro" stylesheets="@styles.css" text="Cerrar">
        <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@img/icons_home.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <!-- Estilos de la vista -->
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
