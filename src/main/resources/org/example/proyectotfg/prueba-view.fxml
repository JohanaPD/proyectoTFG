<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectotfg.controllers.RecordUserController" alignment="CENTER" spacing="10">
    <GridPane vgap="10" hgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        <!-- Nombre y Apellido -->
        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="textNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Apellido:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="textApellidos" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
        <!-- Email y Confirmar Email -->
        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="email" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Confirmar Email:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="confirmarMail" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        <!-- Dirección -->
        <Label text="Calle:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="textCalle" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label text="Ciudad:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
        <TextField fx:id="textCity" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
        <Label text="Código Postal:" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
        <TextField fx:id="textCodPostal" GridPane.rowIndex="2" GridPane.columnIndex="5"/>
        <!-- Password y Repetir Password -->
        <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="textPassword" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        <Label text="Repetir Password:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
        <PasswordField fx:id="textPassword2" GridPane.rowIndex="3" GridPane.columnIndex="3"/>
        <!-- Fecha de Nacimiento y Perfil Profesional -->
        <Label text="Fecha de Nacimiento:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateNacimiento" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Label text="Perfil Profesional:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
        <ComboBox fx:id="tipoUsuario" GridPane.rowIndex="4" GridPane.columnIndex="3">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Normal"/>
                    <String fx:value="Profesional"/>
                </FXCollections>
            </items>
        </ComboBox>
        <!-- Campos condicionales -->
        <Label text="Colegiado:" GridPane.rowIndex="5" GridPane.columnIndex="0" visible="${tipoUsuario.value != 'Normal'}"/>
        <TextField fx:id="colegiadoTextField" GridPane.rowIndex="5" GridPane.columnIndex="1" visible="${tipoUsuario.value != 'Normal'}"/>
        <Label text="Especialidad:" GridPane.rowIndex="5" GridPane.columnIndex="2" visible="${tipoUsuario.value != 'Normal'}"/>
        <TextField fx:id="especialidadTextField" GridPane.rowIndex="5" GridPane.columnIndex="3" visible="${tipoUsuario.value != 'Normal'}"/>
        <Label text="Descripción:" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="4" visible="${tipoUsuario.value != 'Normal'}"/>
        <TextArea fx:id="descripcionTextArea" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="3" visible="${tipoUsuario.value != 'Normal'}"/>
    </GridPane>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Aceptar" onAction="#makeRegister"/>
        <Button text="Cerrar" onAction="#volverHome"/>
    </HBox>
</VBox>
